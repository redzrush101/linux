&i2c1 {
	clock-frequency = <100000>;
	status = "okay";

	/* awinic,aw8624 (haptic) @ 5a */
};

&i2c9 {
	clock-frequency = <100000>;
	status = "okay";

	/* ovti,wl2866d (cam regulator) @ 28 */

	fsa4480: switcher@43 {
		compatible = "fcs,fsa4480";
		reg = <0x43>;

		interrupts-extended = <&tlmm 42 IRQ_TYPE_LEVEL_LOW>;

		vcc-supply = <&vreg_bob>;

		mode-switch;
		orientation-switch;
	};

	tas2564: codec@4c {
		compatible = "ti,tas2564";
		reg = <0x4c>;
		#sound-dai-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&audio_pa_reset_pin>;
		interrupt-parent = <&tlmm>;
		interrupts = <30 IRQ_TYPE_EDGE_FALLING>,
			     <58 IRQ_TYPE_EDGE_FALLING>;
		shutdown-gpios = <&tlmm 91 GPIO_ACTIVE_HIGH>;
		ti,vmon-slot-no = <0>;
		ti,imon-slot-no = <0>;
	};

	/* ti,bq25968 (charger) @ 65 */
};

